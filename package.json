{
    "name": "sovendus-integration-scripts-gtm",
    "version": "2.0.0",
    "license": "Apache-2.0",
    "private": false,
    "description": "Sovendus Integration Scripts used by our GTM tag - checkout the docs at developer-hub.sovendus.com",
    "types": "./dist_scripts/index.d.ts",
    "main": "./dist_scripts/index.mjs",
    "module": "./dist_scripts/index.mjs",
    "files": [
        "dist_scripts/**/*"
    ],
    "exports": {
        ".": {
            "types": "./dist_scripts/index.d.ts",
            "import": "./dist_scripts/index.mjs",
            "require": "./dist_scripts/index.cjs"
        }
    },
    "scripts": {
        "dev": "concurrently --names \"NEXT,NGROK\" --prefix-colors \"blue,green\" \"next dev\" \"ngrok http 3000 --log=stdout\"",
        "build": "sovendus-builder build",
        "lint": "eslint --fix",
        "test": "vitest",
        "pub": "sovendus-release-tool"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Sovendus-GmbH/Sovendus-GTM-v2.git"
    },
    "bugs": {
        "url": "https://github.com/Sovendus-GmbH/Sovendus-GTM-v2/issues"
    },
    "homepage": "https://github.com/Sovendus-GmbH/Sovendus-GTM-v2#readme",
    "keywords": [
        "sovendus",
        "integration",
        "types",
        "typescript"
    ],
    "author": "Marcus Brandstaetter <techsupport@sovendus.com>",
    "contributors": [
        {
            "name": "Marcus Brandstaetter - Sovendus GmbH",
            "email": "techsupport@sovendus.com"
        }
    ],
    "dependencies": {},
    "devDependencies": {
        "@next/third-parties": "^15.2.3",
        "@types/node": "22.13.10",
        "@types/react": "19.0.12",
        "@typescript-eslint/eslint-plugin": "8.26.1",
        "@typescript-eslint/parser": "8.26.1",
        "concurrently": "^9.1.2",
        "eslint": "^9.22.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.3",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.1.4",
        "next": "^15.2.3",
        "ngrok": "^5.0.0-beta.2",
        "prettier": "^3.5.3",
        "prettier-eslint": "^16.3.0",
        "prettier-plugin-sort-json": "4.1.1",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "sovendus-builder": "^1.3.4",
        "sovendus-integration-settings-ui": "^4.0.11",
        "sovendus-integration-types": "^3.7.1",
        "sovendus-release-tool": "^1.4.1",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.26.1",
        "vitest": "^3.0.9",
        "sovendus-integration-scripts": "^3.8.0"
    }
}